@page "/Teacher"

<h3>Teacher</h3>

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h4>Quiz Banks</h4>
        </div>
        <div class="col text-end">
            <button class="btn btn-primary" @onclick="AddQuizBank">
                <i class="fas fa-plus"></i> Add Quiz Bank
            </button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quizBank in quizBanks)
                {
                    <tr>
                        <td>@quizBank.Id</td>
                        <td>@quizBank.Name</td>
                        <td>
                            <button class="btn btn-sm btn-info me-1" @onclick="() => EditQuizBank(quizBank.Id)">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteQuizBank(quizBank.Id)">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
                @if (quizBanks.Count == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center">No quiz banks available. Create one to get started.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

